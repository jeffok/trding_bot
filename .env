
# ---------- Common ----------
APP_ENV=dev
LOG_LEVEL=INFO

# 运行时选择交易所：binance / bybit / paper
EXCHANGE=paper
EXCHANGE_CATEGORY=linear

# 合约杠杆（逐仓）
FUTURES_LEVERAGE=3

# Bybit One-way 模式填 0；Hedge 模式可按账户设置（Buy=1 / Sell=2）
BYBIT_POSITION_IDX=0

SYMBOL=BTCUSDT
INTERVAL_MINUTES=15

# Scheduler tick：开发环境建议缩短（秒），生产建议 900 (15m)
STRATEGY_TICK_SECONDS=900

# 风控：硬止损（默认 3%）
HARD_STOP_LOSS_PCT=0.03

# ---------- Admin / Security ----------
ADMIN_TOKEN=change_me

# ---------- Database (MariaDB) ----------
DB_HOST=mariadb
DB_PORT=3306
DB_USER=alpha
DB_PASS=alpha_pass
DB_NAME=alpha_sniper

# ---------- Redis ----------
REDIS_URL=redis://redis:6379/0

# ---------- Telegram (optional) ----------
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ---------- Binance ----------
BINANCE_BASE_URL=https://fapi.binance.com
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_RECV_WINDOW=5000

# ---------- Bybit ----------
BYBIT_BASE_URL=https://api.bybit.com
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_RECV_WINDOW=5000

# ---------- Paper trading ----------
PAPER_STARTING_USDT=1000
PAPER_FEE_PCT=0.0004
