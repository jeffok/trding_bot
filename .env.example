# ============================================================================
# 交易系统环境配置
# 重要：复制此文件为 .env 并修改实际值
# ============================================================================

# 加密主密钥 - 务必保管好，丢失将无法解密数据！
# 生成命令: python -c "import secrets; print(secrets.token_urlsafe(32))"
CRYPTO_MASTER_KEY=your_super_secure_master_key_here_change_me!

# ==================== 数据库配置 ====================
DATABASE_URL=mysql+pymysql://quant_user:SecurePass123!@localhost:3306/quant_bot

# ==================== Redis配置 ====================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_DIR=./logs

# ==================== Web服务配置 ====================
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_SECRET_KEY=your_web_secret_key_here
WEB_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24小时

# ==================== 交易所API配置 ====================
# 以下配置将在Web界面配置并加密存储到数据库
# 这里仅作为开发环境临时配置

# 币安
BINANCE_TESTNET=false
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Bybit
BYBIT_TESTNET=true
BYBIT_API_KEY=
BYBIT_API_SECRET=

# ==================== AI服务配置 ====================
# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-1106-preview
OPENAI_BASE_URL=https://api.openai.com/v1

# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com

# ==================== Telegram配置 ====================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ==================== 交易配置 ====================
TRADING_ENABLED=false
MAX_POSITION_SIZE=1000  # 最大单笔仓位（USD）
MAX_DAILY_LOSS=500     # 最大日亏损（USD）
TRADING_FEE_RATE=0.001 # 交易手续费率

# ==================== 监控配置 ====================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# ==================== 开发配置 ====================
DEBUG=true
RELOAD=true